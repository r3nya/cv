mixin skill-item(title, skills)
    li
        h4= title
        if skills
            each skill in skills
                p= skill

mixin responsibilities(items)
    span Tech stack:
        each item in items
            = item

mixin tech-stack(text)
    i Technology stack:&nbsp;
        = text

mixin project-item(title, url, text)
    li
        h4
            a(href=url) #{title}
        p #{text}
        br

mixin os-project-item(title, url, github, text)
    li
        a(href=url) #{title}
        | ,&nbsp;
        a(href=github) source code

        p #{text}


mixin github-project-item(title, github, text)
    li
        a(href=github) #{title}

        p #{text}

mixin job-title(position, company, url, date)
    h3 #{position} at&nbsp;
        a(href=url) #{company}
        |  #{date}

mixin project(text, link)
    p
        b Project:&nbsp;
            a(href=link) #{text}

mixin projects(projects)
    p
        b Projects:&nbsp;
            each item in projects
                a(href=item.link) #{item.text}
                | &nbsp;
